<%- include("partials/header")%>
<div id = "title" class= "ui main text container segment">
	<div class = "ui huge header">
		<%= blog.title %>
	</div>
	<div class = "ui top attached">
		<div class= "item">
		<img src= "<%= blog.image %>" class = "ui centered rounded image">
	</div>
	<div class = "content">
		<span><strong><%= blog.created.toDateString() %></strong></span>
	</div>
		<hr>
	<div class = "description">
		<p>
			<%- blog.body %>
		</p>
	</div>
</div>
	
	<a class = "ui button basic green" href = "/blogs/<%=blog._id%>/edit">EDIT</a>
	<form id = "inline" action = "/blogs/<%= blog._id%>?_method=DELETE" method = "POST">
		<button class = "ui basic red button">DELETE</button>
	</form>
	
<%- include("partials/footer")%>