<%- include("partials/header")%>

<div id = "new" class = "ui main text container segment">
	<div class = "ui huge header">New Post</div>
	<form class = "ui form" action = "/blogs" method = "POST">
		<div class = "field">
			<label>Title</label>
			<input type = "text" name = "blog[title]" placeholder = "Blog Title" required>
		</div>
		<div class = "field">
			<label>Image</label>
			<input type = "text" name = "blog[image]" placeholder = "Image URL" required>
		</div>
		<div class = "field">
			<label>Blog Description</label>
			<textarea name = "blog[body]" placeholder = "Blog Description" required></textarea>
		</div>
		<button class="ui secondary button">
  			Submit
		</button>
	</form>
</div>

<%- include("partials/footer")%>